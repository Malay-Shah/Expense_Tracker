<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#A74D4D">

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_date"
        android:layout_marginTop="10dp"
        android:text="12/12/2015"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_description"
        android:text="This is where the description will go!"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_category"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="2dp"
        android:text="Category"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_amount"
        android:text="1000.00"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxWidth="70dp"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/deleteButtonImage"
        android:src="@drawable/delete"
        android:paddingTop="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/text_date"
 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ "
        android:id="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/text_amount"
        android:layout_toStartOf="@+id/text_amount"
        android:layout_marginBottom="10dp"
        android:gravity="right" />


</RelativeLayout>