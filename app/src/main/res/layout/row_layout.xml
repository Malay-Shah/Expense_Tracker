<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#ff81a753">

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_date"
        android:text="12/12/2015"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_description"
        android:text="This is where the description will go!"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/text_amount"
        android:layout_alignEnd="@+id/text_amount"
        android:layout_below="@+id/text_date"
        android:layout_alignLeft="@+id/text_category"
        android:layout_alignStart="@+id/text_category" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_category"
        android:text="Category"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_above="@+id/text_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_amount"
        android:text="1000.00"
        android:gravity="center"
        android:textColor="#000000"
        android:maxWidth="70dp"
        android:layout_alignTop="@+id/text_category"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ "
        android:id="@+id/textView2"
        android:gravity="right"
        android:layout_alignTop="@+id/text_amount"
        android:layout_toLeftOf="@+id/text_amount"
        android:layout_toStartOf="@+id/text_amount" />


</RelativeLayout>